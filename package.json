{
	"name": "waterfall-cli",
	"version": "1.0.0-alpha.0",
	"description": "Effortlessly create CLIs powered by Node.js",
	"types": "dist/cjs/index.cjs.d.ts",
	"files": [
		"dist/"
	],
	"exports": {
		".": {
			"import": "./dist/mjs/index.mjs.js",
			"require": "./dist/cjs/index.cjs.js"
		}
	},
	"scripts": {
		"dev": "yarn install --frozen-lockfile && yarn compile && yarn --cwd ./website install --frozen-lockfile",
		"test": "rugged",
		"lint": "eslint --ext .js,.ts,.jsx,.tsx ./website && prettier --check '**/*.{ts,js,tsx,jsx,json,css,html,yml}'",
		"format": "eslint --fix --ext .js,.ts,.jsx,.tsx ./website && prettier --write '**/*.{ts,js,tsx,jsx,json,css,html,yml}'",
		"clean": "git clean -X -d --force && find . -type d -empty -delete",
		"precompile": "rm -rf dist/",
		"compile": "tsc --project tsconfig.cjs.json && tsc --project tsconfig.mjs.json",
		"postcompile": "./set-types.sh"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sparksuite/waterfall-cli.git"
	},
	"keywords": [
		"cli",
		"command",
		"commander",
		"line",
		"interface",
		"framework"
	],
	"author": "Sparksuite",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/sparksuite/waterfall-cli/issues"
	},
	"homepage": "https://waterfallcli.io",
	"dependencies": {
		"chalk": "^4.0.0",
		"cli-table": "^0.3.1",
		"deepmerge": "^4.0.0",
		"fuse.js": "^3.4.5",
		"semver": "^7.0.0"
	},
	"devDependencies": {
		"@types/cli-table": "^0.3.0",
		"@types/node": "^14.14.25",
		"@types/semver": "^7.3.4",
		"@typescript-eslint/eslint-plugin": "^4.14.2",
		"@typescript-eslint/parser": "^4.14.2",
		"eslint": "^7.19.0",
		"eslint-config-prettier": "^8.0.0",
		"eslint-plugin-react": "^7.22.0",
		"prettier": "^2.2.1",
		"typescript": "^4.1.3"
	}
}
