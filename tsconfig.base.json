{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"rootDirs": ["src", "test"],
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": true
	},
	"include": ["src/**/*", "test/*"],
	"exclude": ["node_modules"]
}
